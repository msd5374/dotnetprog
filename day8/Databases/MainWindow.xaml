<Window x:Class="Databases.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Databases"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Insert" HorizontalAlignment="Left" Margin="97,195,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label x:Name="lblEmpNo" Content="EmpNo" HorizontalAlignment="Left" Margin="91,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmpNo" HorizontalAlignment="Left" Height="23" Margin="187,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblEmpNo_Copy" Content="Name" HorizontalAlignment="Left" Margin="91,74,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="187,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblEmpNo_Copy2" Content="Basic" HorizontalAlignment="Left" Margin="91,110,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBasic" HorizontalAlignment="Left" Height="23" Margin="187,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblEmpNo_Copy3" Content="DeptNo" HorizontalAlignment="Left" Margin="91,148,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDeptNo" HorizontalAlignment="Left" Height="23" Margin="187,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Insert with Prepared statement" HorizontalAlignment="Left" Margin="205,195,0,0" VerticalAlignment="Top" Width="206" Click="Button_Click_1"/>
        <Button Content="Insert with Stored Procedure" HorizontalAlignment="Left" Margin="459,195,0,0" VerticalAlignment="Top" Width="223" Click="Button_Click_2"/>
        <Button Content="Transaction" HorizontalAlignment="Left" Margin="97,242,0,0" VerticalAlignment="Top" Width="142" Click="Button_Click_3"/>
        <Button Content="ExecuteScalar" HorizontalAlignment="Left" Margin="108,290,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click_4"/>
        <Label x:Name="lblCount" Content="Label" HorizontalAlignment="Left" Margin="216,290,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
